{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/redhat-developer/app-services-guides/docs/product-mapping.schema.json",
    "type": "object",
    "properties": {
      "products": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "type": "object",
            "properties": {
              "directories": {
                "type": "array",
                "items": [
                  {
                    "type": "string"
                  }
                ]
              }
            },
            "required": [
              "directories"
            ]
          }
        }
      }
    },
    "required": [
      "products"
    ]
  }
 
   